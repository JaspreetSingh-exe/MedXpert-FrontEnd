<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ChatIntroFragment"
    android:background="@drawable/gradient_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="center">

        <!-- VideoView at the Top -->
        <VideoView
            android:id="@+id/videoView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            />

        <!-- Greeting Message -->
        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Your AI Chat Assistant!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_pink"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/videoView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

        <!-- Instructions Section -->
        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="â³ You can ask up to 10 questions per day.\n\nðŸ’¡ Keep your queries focused for accurate responses.\n\nâŒ¨ï¸ Use text input for seamless communication."
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/tvGreeting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Enter Chatbot Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEnterChatbot"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Enter Chatbot"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            android:backgroundTint="@color/dark_pink"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/tvInstructions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>